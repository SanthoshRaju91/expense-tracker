<section class="expense-create">
  <div class="container-fluid">
    <h3>Create a group</h3>
    <hr>

    <div class="form-horizontal">
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Group Name</label>
        <div class="col-sm-10 col-md-8">
          {{input type="text" class="form-control" placeholder="Group Name" value=group.name}}
        </div>

        {{#if nameError}}
          <div class="col-md-2 error">
            <span>{{nameError}}</span>
          </div>
        {{/if}}
      </div>

      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10 col-md-8">
          {{textarea class="form-control" placeholder="Group Description" value=group.description rows="10" cols="10"}}
        </div>

        {{#if descError}}
          <div class="col-md-2 error">
            <span>{{descError}}</span>
          </div>
        {{/if}}

      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          {{#if create.isRunning}}
            <button type="submit" class="btn btn-primary">
              Creating group {{fa-icon "spinner" spin=true}}
            </button>
          {{else}}
            <button type="submit" class="btn btn-primary" {{action 'createGroup'}}>Create Group</button>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</section>
