<section class="landing">
  <div class="container-fluid">
    <div class="container-header">

      <div class="layer"></div>

      <nav class="navbar navbar-default">
        <div class="container-fluid">

          <div class="navbar-header">

            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a href="#" class="navbar-brand">
              <span>Expense Tracker</span>
            </a>
          </div><!-- end of nav header -->

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            <ul class="nav navbar-nav navbar-right">
              <li><a href="#use">How to use it</a></li>
              <li><a href="#assistance">Need assitance</a></li>
            </ul>

            <form class="navbar-form navbar-right">
              <button class="btn btn-default btn-sm" {{action 'authenticate'}}>Login</button>
            </form>

          </div> <!-- end of navbar collapse -->
        </div>
      </nav><!-- end of nav panel -->

      <div class="panel-section text-center">
        <h1>Manage all your expenses</h1>

        <p>
          Track event expenses in your office / outing expenses with friends with ease just add the expenses, it automatically divides the expense.
        </p>

        <button class="btn btn-default">
          Learn more !
        </button>
      </div>
    </div><!-- end of page header -->

    <div class="how-to-use-section" id="use">
      <div class="container-fluid">
        <h3 class="text-center">How to use </h3>
        <hr/>

        <div class="row container">
          <div class="col-md-6 col-lg-6 pic-section">
            <img src="/assets/responsive.png"/>
          </div>

          <div class="col-md-6 col-lg-6 col-sm-12 list-section">

            <h5>Steps to start off</h5>
            <ul>
              {{#each steps as |item|}}
                <li>
                  {{fa-icon item.icon}}
                  <span>{{item.text}}</span>
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div><!-- end of how to use section -->

    <div class="need-assitance-section" id="assistance">
      <div class="container-fluid">
        <h3 class="text-center"> Need any assitance</h3>
        <hr/>

        <div class="row container">
          <div class="col-md-6 col-lg-6 pic-section">
            <img src="/assets/call-center.png"/>
          </div>

          <div class="col-md-6 col-lg-6 list-section">
            <h5>Get assistance via any one of the below media</h5>

            <ul>
              {{#each assistance as |item|}}
                <li>
                  {{fa-icon item.icon}}
                  <span>{{item.text}}</span>
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div><!-- end of need assistance section -->

    <div class="footer">
      <div class="social-media">
        <div class="container">

          <h5 class="text-center">Connect socially with us</h5>
          <div class="row">
            {{#each media as |item|}}
              <div class="col-md-3">
                <div class="{{item.class}}">
                  <a href="{{item.link}}">
                    {{fa-icon item.icon}}
                  </a>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div> <!-- end of social media section  -->

      <div class="footer-content">
        <div class="nav">
          <ul>
            <li>
              <a href="#">Main</a>
            </li>
            <li>
              <a href="#use">How to use</a>
            </li>
            <li>
              <a href="#assistance">Need assistance</a>
            </li>
          </ul>
        </div>

        <div class="copyright">
          &copy; our company name - 2017
        </div>
      </div>
    </div>
  </div>
</section>

{{outlet}}
