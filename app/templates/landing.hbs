<!-- Landing page section  -->
<section class="landing">
  {{landing-page
    steps=model.steps
    assistance=model.assistance
    media=model.media
    register=(action 'register')
    showLogin=(action 'showLogin')
  }}
</section>

<!-- Modal for login  -->
{{#if showLoginModal class="login-if"}}
  {{#modal-dialog
    close="toggleModal"
    targetAttachment="center"
    translucentOverlay=true
    container-class="login-modal"
  }}

  <div class="login">

    <h5 class="text-center">Login Form</h5>
    <hr/>

    <div class="container">

      {{#if errorMsg}}
        <div class="alert alert-danger">
          {{errorMsg}}
        </div>
      {{/if}}
      <div class="form-horizontal">
        <div class="form-group">
          <div class="col-sm-10">
            {{input type="email" class="form-control" value=username placeholder="Username / E-mail"}}
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10">
            {{input type="password" class="form-control" placeholder="Password" value=password}}
          </div>
        </div>

        <div class="form-group buttons">
          <button type="submit" class="btn btn-default pull-left login-btn"
              onclick={{ perform login username password}}>
            {{#if login.isRunning}}
              Signing in {{fa-icon 'spinner' spin=true}}
            {{else}}
              Sign in
            {{/if}}
          </button>

          <a class="forgot-password"> Forgot password ?</a>
        </div>

        <div class="form-group register-block">
          <hr>
          <button class="btn btn-default btn-block register-btn" {{action 'register'}}>Register</button>
        </div>
      </div>
    </div>
  </div>
  {{/modal-dialog}}
{{/if}}
